#vi: ft=sh

alias ll="ls -la"
alias vim="nvim"

# Base16 Shell
if ! grep -iq ".*base16.*" $HOME/.config/termite/config;
then
echo "no termite config" > ~/confirm
BASE16_SHELL="$HOME/.config/base16-shell/"
[ -n "$PS1" ] && \
    [ -s "$BASE16_SHELL/profile_helper.sh" ] && \
        eval "$("$BASE16_SHELL/profile_helper.sh")"
else
  echo "termite config" > ~/confirm
fi
